    overflow: hidden;
  }

  .contacto {
    width: 340px;
    margin: -2px;
    padding: 10px;
  }

  input {
    width: 320px;
  }

  textarea {
    width: 320px;
  }

  button {
    width: 320px;
  }

  /* Presupuesto */
  .presupuesto {
    width: 340px;
    border-radius: 10px;
    margin-top: 10px;
    padding: 10px;
  }

  footer {
    max-width: 360px;
    padding: 5px 5px 5px 5px;
  }

  #facebook,
  #instagram,
  #twitter {
