/* barra de navegacion tablet/mobile */
@media screen and (max-width: 1023px) and (orientation: portrait) {
  .menu {
    visibility: hidden;
    opacity: 0;
    transition: visibility 0ms, opacity 333ms ease;
    position: absolute;
    background-image: url(../img/background-nav.png);
    font-size: 14px;
    right: 0;
    left: 0;
    text-align: center;
    padding: 16px 0;
    box-shadow: rgb(52, 57, 87) 0px 10px 10px 0px;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
  }

  .menu li:hover {
    display: inline-block;
    background-image: url(../img/background-nav.png);
  }

  .menu li+li {
    margin-top: 12px;
  }

  input[type=checkbox]:checked~.menu {
    display: block;
    visibility: visible;
    opacity: 1;
  }

  .hamburger {
    display: block;
  }

  .dropdown {
    left: 50%;
    top: 30px;
    transform: translateX(35%);
  }

  .dropdown li:hover {
    background-color: orange;
  }
}

