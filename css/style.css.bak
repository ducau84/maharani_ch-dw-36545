/* Presupuesto */
.presupuesto {
  width: 460px;
  height: auto;
  margin: 60px;
  border-radius: 10px;
  padding: 20px 20px 20px 20px;
  background-color: rgb(134, 134, 134);
}

.club>input[type="radio"] {
  display: none;
}

.club>input[type="radio"]+*::before {
  content: "";
  display: inline-block;
  vertical-align: bottom;
  width: 1rem;
  height: 1rem;
  margin-right: 0.3rem;
  border-radius: 50%;
  border-style: solid;
  border-width: 0.1rem;
  border-color: rgb(0, 0, 0);
}

.club>input[type="radio"]:checked+*::before {
  background: radial-gradient(rgb(255, 145, 0) 0%, rgb(255, 145, 0) 40%, transparent 50%, transparent);
  border-color: rgb(255, 145, 3);
}

.club>input[type="radio"]:checked+* {
  color: rgb(255, 145, 3);
}

/* variables de pantalla */
/* mobile */
@media screen and (max-width: 767px) and (orientation: portrait) {
  .logo {
    max-width: 190px;
  }

  main {
    max-width: 360px;
    overflow: hidden
  }

  .titulo,
  .titulo_2 {
    position: static;
    font-size: 17px;
    margin: 5px;
  }

  /* Index */
  .slider {
    max-height: 203px;
  }

  .slider>.description,
  .slider>.bullets {
    display: none;
  }

  .intro {
    font-size: 14px;
    margin: 5px;
  }

  .proceso {
    font-size: 14px;
    margin: 30px;
  }

  /* Quienes Somos */
  .quienes {
    max-width: 340px;
    margin: auto;
  }

  .quienesTexto {
    font-size: 18px;
    margin: 0px;
    max-height: 340px;
  }

  #taller {
    max-width: 340px;
    max-height: 220px;
  }

  /* Galerias */
  .galeria h2 {
    margin-top: 0;
    font-size: 14px;
  }

  .container {
    display: grid;
    width: 100%;
    max-width: 350px;
    gap: 2px;
    grid-template-columns: 165px 165px;
    margin: 0px;
    overflow: hidden;
  }

  .container img {
    max-width: 160px;
  }

  .container span {
    font-size: 12px;
  }

  /* Talles */
  table {
    margin: 10px 50px;
    font-size: small;
  }

  /* Contacto */
  .datos {
    width: 340px;
    margin: 10px 20px;
  }

  .datos h2 {
    font-size: 28px;
  }

  .datos h3 {
    font-size: 20px;
    text-decoration: underline;
  }

  .datos p {
    font-size: 18px;
  }

  .ubicacion {
    padding-top: 20px;
    padding-bottom: 10px;
